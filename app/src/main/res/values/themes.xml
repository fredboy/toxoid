<resources xmlns:tools="http://schemas.android.com/tools">
    <attr format="color" name="colorOnPrimaryVariant"/>
    <attr format="color" name="colorOnSecondaryVariant"/>
    <!-- Base application theme. -->
    <style name="Theme.Toxoid" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_background</item>
        <item name="colorPrimaryVariant">@color/primary_background_variant</item>
        <item name="colorOnPrimary">@color/primary_foreground</item>
        <item name="colorOnPrimaryVariant">@color/primary_foreground</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/secondary_background</item>
        <item name="colorSecondaryVariant">@color/secondary_background_variant</item>
        <item name="colorOnSecondary">@color/secondary_foreground</item>
        <item name="colorOnSecondaryVariant">@color/secondary_foreground_variant</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="materialDrawerStyle">@style/Widget.MaterialDrawerStyle</item>
        <item name="materialDrawerHeaderStyle">@style/Widget.MaterialDrawerHeaderStyle</item>
        <item name="bottomSheetDialogTheme">@style/AppBottomSheetDialogTheme</item>
    </style>
    <style name="Theme.Toxoid.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.Toxoid.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.Toxoid.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <style name="AppBottomSheetDialogTheme"
        parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/AppModalStyle</item>
    </style>

    <style name="AppModalStyle"
        parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_rounded_bottomsheet</item>
    </style>
</resources>